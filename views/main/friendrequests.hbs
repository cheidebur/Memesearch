<input type="hidden" id="thisUserProfile" name="thisUser" value="{{info.username}}">
<div id="space"></div>
<div id="friends-page-container">
	<h1 id="friend-requests-header">Friend requests</h1>
	<div id="requests-container">
	</div>	
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.1.1/handlebars.js" type="text/javascript"></script>

<script id="friend-template" type="text/x-handlebars-template">
	<div class="friend-box" id="\{{friendUsername}}">
		<div class="friend-info">
			<img id="profile-avvy" src="\{{friendAvvy}}">
			<i class="fas fa-user"></i><h2 id="profile-username">\{{friendUsername}}</h2>
			<p id="profile-blurb">\{{friendBlurb}}</p>
		</div>
	

		<div class="friend-accept-deny">
			<button id="accept-friend" value="\{{friendUsername}}">accept</button>
			<button id="deny-friend" value="\{{friendUsername}}">deny</button>
		</div>
	</div>

</script>
<script src="/friends.js"></script>


